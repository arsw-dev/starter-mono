{
  "name": "starter-mono",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "author": "arsw-dev",
  "license": "MIT",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",

    "build:package:http": "pnpm run --prefix ./packages/http build",
    "build:package:types": "pnpm run --prefix ./packages/types build",
    "build:packages": "pnpm build:package:http && pnpm build:package:types",

    "docker:db": "docker compose up postgres -d",
    "docker:db:down": "docker compose down postgres",
    "docker:db:logs": "docker compose logs -f postgres",

    "docker:starter-api": "docker compose up starter-api -d",
    "docker:starter-api:down": "docker compose down starter-api",
    "docker:starter-api:logs": "docker compose logs -f starter-api"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:linting",
    "@eslint-react/eslint-plugin": "catalog:linting",
    "@tanstack/eslint-plugin-query": "catalog:linting",
    "@types/node": "catalog:tooling",
    "eslint": "catalog:linting",
    "eslint-plugin-drizzle": "catalog:linting",
    "eslint-plugin-format": "catalog:linting",
    "eslint-plugin-react-hooks": "catalog:linting",
    "eslint-plugin-react-refresh": "catalog:linting",
    "husky": "catalog:tooling",
    "lint-staged": "catalog:tooling",
    "tsx": "catalog:tooling",
    "typescript": "catalog:tooling"
  },
  "lint-staged": {
    "*": "pnpm lint"
  }
}
