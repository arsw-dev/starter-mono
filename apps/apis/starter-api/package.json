{
  "name": "starter-api",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "rm -rf node_modules/.cache && pnpm clean && rollup -c --no-cache",
    "clean": "rm -rf dist && rm -rf .rollup.cache && rm tsconfig.tsbuildinfo",
    "start": "node dist/index.cjs",
    "lint": "eslint",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@hono/node-server": "catalog:api",
    "@hono/zod-openapi": "catalog:api",
    "dotenv": "catalog:shared",
    "dotenv-expand": "catalog:shared",
    "drizzle-orm": "catalog:api",
    "drizzle-zod": "catalog:api",
    "hono": "catalog:api",
    "hono-pino": "catalog:api",
    "pg": "catalog:api",
    "pino": "catalog:api",
    "pino-pretty": "catalog:api",
    "zod": "catalog:shared"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "catalog:api",
    "@rollup/plugin-commonjs": "catalog:tooling",
    "@rollup/plugin-json": "catalog:tooling",
    "@rollup/plugin-node-resolve": "catalog:tooling",
    "@rollup/plugin-terser": "catalog:tooling",
    "@rollup/plugin-typescript": "catalog:tooling",
    "@scalar/hono-api-reference": "catalog:api",
    "@starter-mono/eslint-config": "workspace:*",
    "@starter-mono/http": "workspace:*",
    "@starter-mono/tsconfig": "workspace:*",
    "@types/node": "catalog:tooling",
    "@types/pg": "catalog:api",
    "drizzle-kit": "catalog:api",
    "eslint": "catalog:linting",
    "eslint-plugin-drizzle": "catalog:linting",
    "rollup": "catalog:tooling",
    "rollup-plugin-dts": "catalog:tooling",
    "tslib": "catalog:tooling",
    "tsx": "catalog:tooling",
    "typescript": "catalog:tooling"
  }
}
