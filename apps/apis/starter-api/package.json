    "hono-pino": "catalog:api",
    "pino": "catalog:api",
    "pino-pretty": "catalog:api",
    "zod": "catalog:shared"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "catalog:tooling",
    "@rollup/plugin-node-resolve": "catalog:tooling",
    "@rollup/plugin-terser": "catalog:tooling",
    "@rollup/plugin-typescript": "catalog:tooling",
    "@starter-mono/eslint-config": "workspace:*",
    "@starter-mono/http": "workspace:*",
    "@starter-mono/tsconfig": "workspace:*",
    "@types/node": "catalog:tooling",
    "eslint-plugin-drizzle": "catalog:linting",
    "rollup": "catalog:tooling",
    "tslib": "catalog:tooling",
    "tsx": "catalog:tooling",
    "typescript": "catalog:tooling"
  }
